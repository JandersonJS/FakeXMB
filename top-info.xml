<!-- Theme by pajarorrojo adapted by LordOgro 
-->
<theme>
   <formatVersion>7</formatVersion>


   <!--BARRA DE INFORMACION SUPERIOR-->
   <view name="system">


      <image name="plus-picto" extra="static">
         <path>./images/plus-picto-bato.svg</path>
         <pos>0.046 0.045</pos>
         <maxSize>0.050</maxSize>
         <color>ffffff</color>
         <verticalAlignment>top</verticalAlignment>
         <alignment>left</alignment>
         <linearSmooth>true</linearSmooth>
         <zIndex>99</zIndex>
      </image>


      <text name="systemInfo">
         <visible>true</visible>
      </text>

      <text name="systemInfoEx" extra="static">
         <alignment>left</alignment>
         <pos>0.162 0.045</pos>
         <size>0.398 0.055</size>
         <color>FFFFFF</color>
         <fontPath>./fonts/SST Light.ttf</fontPath>
         <fontSize>0.030</fontSize>
         <glowColor>00000035</glowColor>
         <glowSize>1</glowSize>
         <glowOffset>3 2</glowOffset>
         <backgroundColor>ff000000</backgroundColor>
         <zIndex>60</zIndex>
      </text>

      <text name="systemInfoEx" extra="static">
      <include>./infos/${system.theme}.xml</include>
      </text>
      <view name="system">
          <text name="system_description" extra="static">
               <color>FFFFFF</color>
               <zIndex>80</zIndex>
          </text>
          </view>


      <image name="trophy-picto" extra="static">
         <path>./images/trophy-picto.svg</path>
         <pos>0.827 0.045</pos>
         <maxSize>0.044</maxSize>
         <color>ffffff</color>
         <color ifCheevos="true">F3C300d1</color>
         <verticalAlignment>top</verticalAlignment>
         <alignment>left</alignment>
         <linearSmooth>true</linearSmooth>
         <zIndex>99</zIndex>
      </image>
   </view>


   <view name="system">

      <image name="info-picto" extra="static">
         <path>./images/info-picto.svg</path>
         <pos>0.095 0.047</pos>
         <maxSize>0.045</maxSize>
         <color>ffffff</color>
         <verticalAlignment>top</verticalAlignment>
         <alignment>left</alignment>
         <linearSmooth>true</linearSmooth>
         <zIndex>99</zIndex>
      </image>


      <image name="info-picto" extra="static" tinyScreen="true">
         <pos>0.02 0.047</pos>
      </image>

      <image name="puntoazul-1" extra="static">
         <path>./images/punto-azul.png</path>
         <pos>0.557 0.024</pos>
         <maxSize>0.016</maxSize>
         <color>ffffff</color>
         <verticalAlignment>top</verticalAlignment>
         <alignment>left</alignment>
         <linearSmooth>true</linearSmooth>
         <zIndex>99</zIndex>
      </image>

      <text name="friends" extra="static">
         <text>34</text>
         <pos>0.57 0.012</pos>
         <size>0.024 0.035</size>
         <color>ffffff</color>
         <fontPath>./fonts/SST Light.ttf</fontPath>
         <fontSize>0.024</fontSize>
         <alignment>left</alignment>
         <glowColor>00000035</glowColor>
         <glowSize>1</glowSize>
         <glowOffset>3 2</glowOffset>
         <zIndex>99</zIndex>
         <backgroundColor>ff000000</backgroundColor>
      </text>

      <image name="users-picto" extra="static">
         <path>./images/users-picto.svg</path>
         <pos>0.554 0.047</pos>
         <maxSize>0.05</maxSize>
         <color>ffffff</color>
         <verticalAlignment>top</verticalAlignment>
         <alignment>left</alignment>
         <linearSmooth>true</linearSmooth>
         <zIndex>99</zIndex>
      </image>

      <image name="puntoazul-2" extra="static">
         <path>./images/punto-azul.png</path>
         <pos>0.604 0.061</pos>
         <maxSize>0.016</maxSize>
         <color>ffffff</color>
         <verticalAlignment>top</verticalAlignment>
         <alignment>left</alignment>
         <linearSmooth>true</linearSmooth>
         <zIndex>99</zIndex>
      </image>


      <image name="avatar" extra="static">
         <path>./_theme_options/avatars/${image.avatar}</path>
         <path ifSubset="system-avatar:custom">./custom-avatar.png</path>
         <pos>0.618 0.035</pos>
         <maxSize>0.063 0.063</maxSize>
         <zIndex>99</zIndex>
         <linearSmooth>true</linearSmooth>
      </image>

      <text name="username" extra="static">
         <text>${theme.nick}</text>
         <text ifSubset="system-username:custom">${custom.nick}</text>

         <pos>0.660 0.05</pos>

         <size>0.165 0.035</size>
         <color>ffffff</color>
         <fontPath>./fonts/SST Light.ttf</fontPath>
         <fontSize>0.028</fontSize>
         <alignment>left</alignment>
         <glowColor>00000035</glowColor>
         <glowSize>1</glowSize>
         <glowOffset>3 2</glowOffset>
         <zIndex>99</zIndex>
         <backgroundColor>ff000000</backgroundColor>
      </text>


      <image name="star-picto" extra="static">
         <path>./images/star-picto.png</path>
         <pos>0.856 0.052</pos>
         <maxSize>0.03</maxSize>
         <color>ffffff</color>
         <verticalAlignment>top</verticalAlignment>
         <alignment>left</alignment>
         <linearSmooth>true</linearSmooth>
         <zIndex>99</zIndex>
      </image>

      <text name="trophy-level" extra="static">
         <text>2022</text>
         <pos>0.875 0.05</pos>
         <size>0.048 0.035</size>
         <color>ffffff</color>
         <fontPath>./fonts/SST Roman.ttf</fontPath>
         <fontSize>0.025</fontSize>
         <alignment>left</alignment>
         <glowColor>00000035</glowColor>
         <glowSize>1</glowSize>
         <glowOffset>3 2</glowOffset>
         <zIndex>99</zIndex>
         <backgroundColor>ff000000</backgroundColor>
      </text>

   </view>
</theme>