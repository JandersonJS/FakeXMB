<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>

  <customView name="Carousel,Boxes,Tiles,grid">
    <imagegrid name="gamegrid">
      <showVideoAtDelay>-1</showVideoAtDelay>
    </imagegrid>
  </customView>

  <customView name="Carousel,Boxes,Tiles,grid">
    <image name="gamelistBackground" extra="true">
      <path>./art/filter.png</path>
      <color>606060FF</color>
      <origin>0 0</origin>
      <pos>0.66 0.16</pos>
      <size>0.34 0.774</size>
      <zIndex>12</zIndex>
    </image>
    <image name="md_image">
      <visible>false</visible>
    </image>
    <text name="md_name">
      <color>ffffffff</color>
      <pos>0.68 0.18</pos>
      <size>0.30 0.05</size>
      <color>F0F0F0</color>
      <fontSize>0.040</fontSize>
      <fontPath>./art/Cabin-Bold.ttf</fontPath>
      <alignment>center</alignment>
      <glowColor>${glowColor}</glowColor>
      <glowSize>2</glowSize>
    </text>
    <image name="md_flag"> 
       <origin>0 0.5</origin>
       <pos>0.68 0.9</pos>
       <maxSize>0.02 0.05</maxSize>
    </image>
    <text name="md_developer">
      <color>EFEFFF</color>
      <pos>0.705 0.875</pos>
      <size>0.28 0.05</size>
      <alignment>left</alignment>
      <fontSize>0.025</fontSize>
    </text>
    <video name="md_video">
      <pos>0.83 0.455</pos>
      <minSize>0.29 0.39</minSize>
      <origin>0.5 0.5</origin>
      <delay>1</delay>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <loops>0</loops>
    </video>
    <image name="tv_overlay" extra="true">
      <pos>0.68 0.25</pos>
      <size>0.30 0.40</size>
      <path>./art/tv.png</path>
      <zIndex>140</zIndex>
    </image>
    <text name="md_description">
      <pos>0.68 0.678</pos>
      <size>0.30 0.20</size>
      <fontSize>0.025</fontSize>
      <color>A0A0B0</color>
    </text>
    <text name="md_rating">
      <pos>0.9 0.886</pos>
      <size>0.05 0.03</size>
    </text>
    <rating name="md_rating">
      <color>FFFF00</color>
      <unfilledColor>808080</unfilledColor>
    </rating>
    <image name="md_kidgame">     
      <path>./art/kid.svg</path>
      <pos>0.882 0.901</pos>
      <maxSize>0.02 0.03</maxSize>      
      <origin>0.5 0.5</origin>
      <color>A0A0B0</color>
      <zIndex>150</zIndex>
    </image>
    <image name="md_hidden">
      <path>./art/hidden.svg</path>
      <pos>0.975 0.205</pos>
      <maxSize>0.02 0.03</maxSize>      
      <origin>0.5 0.5</origin>
      <color>A0A0B0</color>
      <zIndex>150</zIndex>
    </image>
  </customView>
  
  <customView name="Carousel">
    <imagegrid name="gamegrid">
      <pos>0 0.16</pos>
      <size>0.66 0.774</size>
      <autoLayout>3 1</autoLayout>
      <padding>0.01 0.18 0.01 0.24</padding>
    </imagegrid>
  </customView>
  
  <customView name="Boxes,Tiles,grid">
    <imagegrid name="gamegrid">
      <pos>0 0.16</pos>
      <size>0.66 0.84</size>
      <autoLayout>4 2</autoLayout>
    </imagegrid>
  </customView>
  
    <customView name="Tiles">
    <imagegrid name="gamegrid">
      <pos>0 0.16</pos>
      <size>0.66 0.84</size>
      <autoLayout>2 2</autoLayout>
    </imagegrid>
  </customView>

</theme>
